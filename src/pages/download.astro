<style>
  /* Main Layout */
  .download-page {
    min-height: 100vh;
    position: relative;
  }

  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
  }

  /* Header Section */
  .header-section {
    padding: 4rem 0 6rem;
    text-align: center;
    position: relative;
    background: var(--bg-primary);
  }

  .header-section::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 1px;
    background: linear-gradient(90deg, transparent, var(--border-neon), transparent);
    opacity: 0.5;
  }

  .page-title {
    font-size: clamp(3rem, 8vw, 5rem);
    font-weight: 700;
    margin-bottom: 1rem;
    background: linear-gradient(135deg, var(--text-primary) 0%, var(--neon-purple) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    text-shadow: none;
  }

  .page-subtitle {
    font-size: clamp(1.25rem, 3vw, 1.5rem);
    color: var(--text-secondary);
    margin-bottom: 2rem;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
  }

  .version-info {
    display: flex;
    justify-content: center;
    margin-top: 2rem;
  }

  .version-badge {
    background: rgba(139, 92, 246, 0.1);
    border: 1px solid rgba(139, 92, 246, 0.3);
    color: var(--neon-purple);
    padding: 0.5rem 1rem;
    border-radius: 20px;
    font-size: 0.875rem;
    font-weight: 500;
    text-shadow: 0 0 10px rgba(139, 92, 246, 0.3);
  }

  /* Download Section */
  .download-section {
    padding: 4rem 0;
    background: var(--bg-secondary);
    position: relative;
  }

  .platforms-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 2rem;
    max-width: 900px;
    margin: 0 auto;
  }

  .platform-card {
    background: var(--bg-primary);
    border: 1px solid var(--border-default);
    border-radius: 20px;
    padding: 2.5rem;
    position: relative;
    transition: all 0.3s ease;
    overflow: hidden;
  }

  .platform-card.active {
    border-color: var(--border-neon);
    box-shadow: 
      0 20px 40px rgba(0, 0, 0, 0.3),
      0 0 30px rgba(139, 92, 246, 0.2);
  }

  .platform-card.active::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: var(--gradient-neon);
    opacity: 0.03;
    z-index: 0;
  }

  .platform-card.coming-soon {
    opacity: 0.7;
    position: relative;
  }

  .platform-card > * {
    position: relative;
    z-index: 1;
  }

  .coming-soon-badge {
    position: absolute;
    top: 1rem;
    right: 1rem;
    background: linear-gradient(45deg, var(--neon-purple), var(--neon-blue));
    color: white;
    padding: 0.25rem 0.75rem;
    border-radius: 12px;
    font-size: 0.75rem;
    font-weight: 600;
    z-index: 2;
  }

  .platform-icon {
    display: flex;
    justify-content: center;
    margin-bottom: 1.5rem;
    color: var(--neon-purple);
    filter: drop-shadow(0 0 15px rgba(139, 92, 246, 0.3));
  }

  .platform-icon.disabled {
    color: var(--text-muted);
    filter: none;
    opacity: 0.5;
  }

  .platform-content h3 {
    font-size: 1.75rem;
    color: var(--text-primary);
    margin-bottom: 0.75rem;
    text-align: center;
  }

  .platform-description {
    color: var(--text-secondary);
    text-align: center;
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  .platform-details {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    margin-bottom: 2rem;
    padding: 1.5rem;
    background: var(--bg-secondary);
    border-radius: 12px;
    border: 1px solid var(--border-default);
  }

  .detail-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .detail-label {
    color: var(--text-secondary);
    font-size: 0.875rem;
  }

  .detail-value {
    color: var(--text-primary);
    font-weight: 500;
    font-size: 0.875rem;
  }

  /* Download Buttons */
  .download-buttons {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    align-items: center;
  }

  .btn-download {
    background: var(--btn-primary-bg);
    border: 1px solid var(--btn-primary-border);
    color: var(--text-primary);
    padding: 1rem 2rem;
    border-radius: 12px;
    font-size: 1.125rem;
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 0.75rem;
    cursor: pointer;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
    width: 100%;
    justify-content: center;
  }

  .btn-download.primary:hover {
    background: var(--btn-primary-hover);
    border-color: var(--neon-purple);
    box-shadow: 
      0 0 30px rgba(139, 92, 246, 0.4),
      0 10px 20px rgba(0, 0, 0, 0.3);
    transform: translateY(-2px) scale(1.02);
    color: var(--text-primary);
    text-shadow: 0 0 10px rgba(139, 92, 246, 0.6);
  }

  .btn-download.primary:active {
    animation: download-pulse 0.5s ease;
  }

  .btn-download.disabled {
    background: var(--bg-tertiary);
    border-color: var(--border-muted);
    color: var(--text-muted);
    cursor: not-allowed;
    opacity: 0.6;
  }

  .format-options {
    display: flex;
    gap: 0.5rem;
    flex-wrap: wrap;
    justify-content: center;
  }

  .format-btn {
    background: transparent;
    border: 1px solid var(--border-default);
    color: var(--text-secondary);
    padding: 0.5rem 1rem;
    border-radius: 8px;
    font-size: 0.875rem;
    cursor: pointer;
    transition: all 0.2s ease;
  }

  .format-btn:hover {
    border-color: var(--border-neon);
    color: var(--neon-purple);
    background: rgba(139, 92, 246, 0.05);
  }

  /* Installation Section */
  .installation-section {
    padding: 6rem 0;
    background: var(--bg-primary);
  }

  .section-title {
    font-size: clamp(2rem, 5vw, 2.5rem);
    text-align: center;
    margin-bottom: 3rem;
    background: linear-gradient(135deg, var(--text-primary) 0%, var(--neon-purple) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .instructions-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    margin-top: 3rem;
  }

  .instruction-card {
    background: var(--bg-secondary);
    border: 1px solid var(--border-default);
    border-radius: 16px;
    padding: 2rem;
    text-align: center;
    transition: all 0.3s ease;
  }

  .instruction-card:hover {
    border-color: var(--border-neon);
    box-shadow: var(--glow-soft);
    transform: translateY(-5px);
  }

  .instruction-icon {
    font-size: 2.5rem;
    margin-bottom: 1rem;
    display: block;
  }

  .instruction-card h3 {
    color: var(--text-primary);
    margin-bottom: 1rem;
    font-size: 1.25rem;
  }

  .code-block {
    background: var(--bg-tertiary);
    border: 1px solid var(--border-default);
    border-radius: 8px;
    padding: 1rem;
    margin-top: 1rem;
  }

  .code-block code {
    color: var(--neon-cyan);
    font-family: 'SFMono-Regular', 'Consolas', 'Liberation Mono', 'Menlo', monospace;
    font-size: 0.875rem;
    line-height: 1.5;
  }

  /* Requirements Section */
  .requirements-section {
    padding: 6rem 0;
    background: var(--bg-secondary);
  }

  .requirements-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-top: 3rem;
  }

  .requirement-item {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    background: var(--bg-primary);
    padding: 2rem;
    border-radius: 16px;
    border: 1px solid var(--border-default);
    transition: all 0.3s ease;
  }

  .requirement-item:hover {
    border-color: var(--border-neon);
    box-shadow: var(--glow-soft);
  }

  .req-icon {
    font-size: 2rem;
    min-width: 2rem;
  }

  .req-content h4 {
    color: var(--text-primary);
    margin-bottom: 0.5rem;
    font-size: 1.125rem;
  }

  .req-content p {
    color: var(--text-secondary);
    margin: 0;
    line-height: 1.5;
  }

  /* Support Section */
  .support-section {
    padding: 6rem 0;
    background: var(--bg-primary);
  }

  .support-links {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
