<script>
  /**
   * @typedef {Object} DownloadUrls
   * @property {string} deb
   * @property {string} tar.gz
   * @property {string} appimage
   */

  /** @type {DownloadUrls} */
  const downloadUrls = {
    deb: '/downloads/flashdeck-linux.deb',
    'tar.gz': '/downloads/flashdeck-linux.tar.gz',
    appimage: '/downloads/flashdeck-linux.AppImage'
  };

  /**
   * Fun√ß√£o para baixar uma plataforma espec√≠fica
   * @param {string} platformId - ID da plataforma
   */
  function downloadPlatform(platformId: string) {
    if (platformId === 'linux') {
      downloadLinux();
    }
  }

  /**
   * Fun√ß√£o para baixar Linux (formato padr√£o)
   */
  function downloadLinux() {
    showDownloadModal();
    // Simular download - em produ√ß√£o, isso faria o download real
    setTimeout(() => {
      const link = document.createElement('a');
      link.href = downloadUrls.deb;
      link.download = 'flashdeck-linux.deb';
      document.body.appendChild(link);
      link.click();
      document.body.removeChild(link);
      
      updateProgress(100);
      setTimeout(() => {
        closeModal();
      }, 2000);
    }, 1000);
  }

  /**
   * Fun√ß√£o para baixar formato espec√≠fico
   * @param {'deb'|'tar.gz'|'appimage'} format - Formato do arquivo
   */
  function downloadFormat(format: keyof typeof downloadUrls) {
    // Valida√ß√£o de formato
    const validFormats = ['deb', 'tar.gz', 'appimage'] as const;
    if (!validFormats.includes(format as any)) {
      console.error(`Formato n√£o suportado: ${format}`);
      return;
    }
    
    const url = downloadUrls[format];
    if (!url) {
      console.error(`URL n√£o encontrada para o formato: ${format}`);
      return;
    }
    
    showDownloadModal();
    setTimeout(() => {
      const link = document.createElement('a');
      link.href = url;
      link.download = `flashdeck-linux.${format}`;
      document.body.appendChild(link);
      link.click();
      document.body.removeChild(link);
      
      updateProgress(100);
      setTimeout(() => {
        closeModal();
      }, 2000);
    }, 1000);
  }

  /**
   * Fun√ß√£o para mostrar modal de download
   */
  function showDownloadModal() {
    const modal = document.getElementById('downloadModal');
    if (!modal) {
      console.error('Modal de download n√£o encontrado');
      return;
    }
    
    modal.style.display = 'flex';
    updateProgress(0);
    
    // Simular progresso
    let progress = 0;
    const interval = setInterval(() => {
      progress += Math.random() * 20;
      if (progress >= 90) {
        clearInterval(interval);
        progress = 90;
      }
      updateProgress(progress);
    }, 200);
  }

  /**
   * Fun√ß√£o para atualizar progresso
   * @param {number} percentage - Porcentagem do progresso (0-100)
   */
  function updateProgress(percentage: number) {
    /** @type {HTMLElement | null} */
    const progressFill = document.querySelector('.progress-fill') as HTMLElement;
    /** @type {HTMLElement | null} */
    const progressText = document.querySelector('.progress-text') as HTMLElement;
    
    if (!progressFill || !progressText) {
      console.error('Elementos de progresso n√£o encontrados');
      return;
    }
    
    progressFill.style.width = percentage + '%';
    
    if (percentage === 0) {
      progressText.textContent = 'Preparando download...';
    } else if (percentage < 100) {
      progressText.textContent = `Baixando... ${Math.round(percentage)}%`;
    } else {
      progressText.textContent = 'Download conclu√≠do!';
    }
  }

  /**
   * Fun√ß√£o para fechar modal
   */
  function closeModal() {
    const modal = document.getElementById('downloadModal');
    if (modal) {
      modal.style.display = 'none';
    }
  }

  // Event listeners
  document.addEventListener('DOMContentLoaded', () => {
    const modal = document.getElementById('downloadModal');
    
    // Fechar modal clicando fora
    if (modal) {
      modal.addEventListener('click', function(e) {
        if (e.target === this) {
          closeModal();
        }
      });
    }

    // Fechar modal com ESC
    document.addEventListener('keydown', function(e) {
      if (e.key === 'Escape') {
        closeModal();
      }
    });
  });

  // Expor fun√ß√µes globalmente para uso inline
  window.downloadPlatform = downloadPlatform;
  window.downloadLinux = downloadLinux;
  window.downloadFormat = downloadFormat;
  window.closeModal = closeModal;
</script>
