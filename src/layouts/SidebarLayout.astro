---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
	description: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="pt-br">
	<head>
		<BaseHead title={title} description={description} />
			<style is:global>
			:root {
				--background-color: #0F1319;
				--sidebar-color: #171C24;
				--text-color: #E6E6E6;
				--link-color: #4D9CFF;
				--link-hover-color: #77B6FF;
				--border-color: #2A2F36;
			}
			
			html, body {
				background-color: var(--background-color);
				color: var(--text-color);
				margin: 0;
				padding: 0;
				font-family: system-ui, sans-serif;
			}
			
			a {
				color: var(--link-color);
				text-decoration: none;
			}
			
			a:hover {
				color: var(--link-hover-color);
				text-decoration: underline;
			}
			
			code {
				background-color: #242830;
				padding: 0.2em 0.4em;
				border-radius: 3px;
				font-size: 0.9em;
			}
		</style>
		<style>
			.layout-container {
				display: flex;
				min-height: 100vh;
                max-height: 100vh;
				background-color: var(--background-color);
			}
			
			.sidebar {
				width: 250px;
				background-color: var(--sidebar-color);
				position: fixed;
				height: 100vh;
				left: 0;
				top: 0;
				overflow-y: auto;
				padding: 1rem;
				box-shadow: 0 0 10px rgba(0, 0, 0, 0.3);
				border-right: 1px solid var(--border-color);
			}
			
			.main-content {
				flex: 1;
				margin-left: 250px;
				padding: 2rem;
				line-height: 1.6;
				background-color: var(--background-color);
				color: var(--text-color);
			}
			
			h1, h2, h3, h4, h5, h6 {
				color: #fff;
				margin-top: 1.5em;
				margin-bottom: 0.5em;
			}
			
			p {
				margin: 1em 0;
			}
			
			ul {
				padding-left: 1.5em;
			}
			
			@media (max-width: 768px) {
				.sidebar {
					width: 200px;
				}
				
				.main-content {
					margin-left: 200px;
				}
			}
		</style>
	</head>
	<body>
		<div class="layout-container">
			<aside class="sidebar">
				<Header />
			</aside>
			<main class="main-content">
				<slot />
				<Footer />
			</main>
		</div>
	</body>
</html>
